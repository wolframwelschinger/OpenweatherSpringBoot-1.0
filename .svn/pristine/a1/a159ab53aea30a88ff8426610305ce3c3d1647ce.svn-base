'use strict';

var app = angular.module('wetterApp');

/* Fragt Wetterdaten aus der DB ab, speichert bzw. loescht diese
 * 
 * https://devdactic.com/improving-rest-with-ngresource/
 */

app.factory('OrtService', ['$resource', function ($resource) {
	
    return $resource('ort/all', {}, {
        query: {
            method: 'GET',
            isArray: false
        },
        all: {
            method: 'GET',
            url: 'ort/all',
            isArray: true
        },
        byId: {
            method: 'GET',
            url: 'ort/byId',
            paramDefaults: {id: '@id'}
        },
        save: {
            method: 'POST',
            url: 'ort/save/'
        },
        delete: {
            method: 'DELETE',
            url: 'ort/:id',
            paramDefaults: {id: '@id'}
        }        
    })	
	
