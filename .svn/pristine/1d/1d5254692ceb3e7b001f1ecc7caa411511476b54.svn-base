<!-- Global nutzbares Template den Paginator  -->
<div class="row">
	<div class="col-sm-3 vcenter">
		<span class="text-muted"><b>Ergebnisse:</b> <span data-ng-hide="query.isLoading('pager')"><span data-ng-hide="query.paging.totalItems == 0">{{query.paging.fromItem}} - {{query.paging.toItem}} von {{query.paging.totalItems}}</span><span data-ng-show="query.paging.totalItems == 0">keine</span></span><i data-ng-show="query.isLoading('pager')" class="fa fa-refresh fa-spin fa-fw"></i></span>
	</div><div class="col-sm-9 vcenter">
		<div class="pull-right">
			<div class="vcenter" style="margin-right:20px">
				<form class="form-inline" role="form" name="itemsPerPageForm" data-ng-submit="query.itemsPerPageEdited()">
					<span class="form-group" style="margin-bottom:0">
						<label for="itemsInput" class="text-muted">je Seite:</label>
						<input id="itemsInput" class="form-control input-sm" style="width:65px"
								type="number" min="1" max="100" required
								data-ng-blur="query.itemsPerPageEdited()"
								data-ng-model="query.paging.itemsPerPageEdit">
					</span>
				</form>
			</div>
			<!-- 
			<div data-uib-pagination
				data-ng-change="query.load('pager')"
				data-ng-model="query.paging.currentPage"
				data-items-per-page="query.paging.itemsPerPage"
				data-total-items="query.paging.totalItems"
				data-boundary-link-numbers="true"
				data-max-size="6"
				data-previous-text="&#xe079;"
				data-next-text="&#xe080;"
				class="direction-glyphicons vcenter">
			</div>
			-->
			<div data-uib-pagination
				data-ng-change="query.load('pager')"
				data-ng-model="query.paging.currentPage"
				data-items-per-page="query.paging.itemsPerPage"
				data-total-items="query.paging.totalItems"
				data-boundary-link-numbers="true"
				data-max-size="6"
				data-previous-text="<"
				data-next-text=">"
				class="direction-glyphicons vcenter">
			</div>			
		</div>
	</div>
</div>