<table class="table table-striped">

	<h3>&Uuml;bersicht</h3>
	<br />

    <tbody>
    		<tr>
			<th>Id</th>
			<th>Ort</th>
			<th>Land</th>
			<th>geogr. L&auml;nge</th>
			<th>geogr. Breite</th>
			<th>Zeit</th>
			<th>Temp.</th>
			<th>Temp. (min)</th>
			<th>Temp. (max)</th>
			<th>Luftfeuchtigkeit</th>
			<th>Luftdruck</th>
			<th>Windgeschw.</th>
			<th>Windricht</th>
			<th>Wolken</th>
			<th>Wetterlage</th>
			<th></th>
		</tr>
        <tr data-ng-repeat="daten in wetterdaten">
			<td data-ng-bind="daten.Id"></td>
			<td data-ng-bind="daten.ort"></td>
			<td data-ng-bind="daten.land"></td>
			<td data-ng-bind="daten.geoLaenge"></td>
			<td data-ng-bind="daten.geoBreite"></td>
			<td data-ng-bind="daten.zeitString"></td>
			<td data-ng-bind="daten.temperatur"></td>
			<td data-ng-bind="daten.temperatur_min"></td>
			<td data-ng-bind="daten.temperatur_max"></td>
			<td data-ng-bind="daten.luftFeuchtigkeit"></td>
			<td data-ng-bind="daten.luftDruck"></td>
			<td data-ng-bind="daten.windGeschwindigkeit"></td>
			<td data-ng-bind="daten.windRichtung"></td>
			<td data-ng-bind="daten.wolken"></td>
			<td data-ng-bind="daten.wetterbeschreibung"></td>
			<td><img data-ng-src="{{daten.iconUrl}}" /></td>                                   
        </tr>
    </tbody>
</table>
<br />

