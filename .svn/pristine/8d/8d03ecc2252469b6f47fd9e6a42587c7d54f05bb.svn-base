'use strict';

var app = angular.module('katalogtoolApp');


app.factory('AnwendungService', ['$resource', function ($resource) {
    return $resource('restservices/anwendung/', {}, {
        query: {
            method: 'GET',
            isArray: false
        },
        all: {
            method: 'GET',
            url: 'restservices/anwendung/all',
            isArray: true
        },
        byId: {
            method: 'GET',
            url: 'restservices/anwendung/:id',
            id: '@anwendung'
        },
        save: {
            method: 'POST',
            url: 'restservices/anwendung/'
        },
        delete: {
            method: 'DELETE',
            url: 'restservices/anwendung/:id',
            id: '@anwendung'
        }
    })
    
}]);

