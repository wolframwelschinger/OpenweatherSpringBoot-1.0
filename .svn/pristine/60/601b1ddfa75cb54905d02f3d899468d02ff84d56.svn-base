    return $resource('wetter/', {}, {
        query: {
            method: 'GET',
            isArray: false
        },
        all: {
            method: 'GET',
            url: 'wetter/all',
            isArray: true
        },
        byId: {
            method: 'GET',
            url: 'wetter/byId/:id',
            id: '@wetter'
        }

