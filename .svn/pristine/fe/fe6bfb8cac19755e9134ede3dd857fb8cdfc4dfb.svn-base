<div>
	<table class="table table-striped" style="background-color: rgba(255, 255, 255, 0.8);">
		<tbody>
			<tr>
				<th>Id</th>
				<th>Ort</th>
				<th>Land</th>
				<th>Aktion</th>
			</tr>
			<tr data-ng-repeat="daten in wetterdaten">
				<td data-ng-bind="daten.id"></td>
				<td data-ng-bind="daten.ort"></td>
				<td data-ng-bind="daten.land"></td>
				<td>
					<a data-ng-href="#!/ort/display/{{daten.id}}">Anzeigen</a>				
					<a data-ng-href="#!/ort/delete/{{daten.id}}">L&ouml;schen</a>
				</td>
			</tr>
		</tbody>
	</table>
	<br />
</div>

